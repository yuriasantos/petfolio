<div class="vet-profile p-4" data-controller="edit-profile" data-edit-profile-target="content">
  <div data-edit-profile-target="info">
      <% if vet.photo.present? %>
        <%= cl_image_tag vet.photo.key, crop: :fill, class: "img-card w-25"%>
      <% else %>
        <img src="https://icon-library.com/images/default-user-icon/default-user-icon-13.jpg" class='img-card w-25' alt="Profile Image">
      <% end %>
    <div class="d-flex justify-content-between">
      <h3><%= vet.fullname %></h3>
      <div data-action="click->edit-profile#displayForm">
        <i class="fa-solid fa-pen fa-xs ml-2" ></i>
      </div>
    </div>
    <p class="vet-professional-info">Specialty: <%= vet.specialty %></p>
    <p class="vet-professional-info">CRMV: <%= vet.crmv %></p>
    <p class="vet-email"><%= vet.email %></p>
  </div>

    <%= render 'edit_vet', vet: vet %>

</div>
