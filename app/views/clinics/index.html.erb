<div class="container-md">
  <div class="my-4">
    <h2>Clinics:</h2>
  </div>
  <div class="row">
    <div class="col-md-8">
      <div class="width-100">
        <%= form_with url: clinics_path, method: :get, class: "d-flex" do %>
          <%= text_field_tag :query,
                params[:query],
                class: "form-control",
                placeholder: "Type a keyword"
            %>
          <%= submit_tag "Search", name: "", class: "btn btn-warning" %>
        <% end %>
      </div>
      <div class="row row-cols-1 row-cols-md-2 my-4">
        <% @clinics.each do |clinic| %>
          <div class="col mb-4">
            <%= link_to clinic_path(clinic) do%>
              <%= render 'card', clinic: clinic %>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
    <div class="col-md-4">
      <div style="position: sticky; top: 0; height: 100vh; overflow-y: auto;">
        <div style="width: 100%; height: 100vh;"
        data-controller="map"
        data-map-markers-value="<%= @markers.to_json %>"
        data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>"></div>
      </div>
    </div>
  </div>
</div>
