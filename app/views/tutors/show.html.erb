
<div class="container">
  <div class="main-body">
    <nav aria-label="breadcrumb" class="main-breadcrumb">
      <ol class="breadcrumb">
        <li class="breadcrumb-item active" aria-current="page">Tutor Profile</li>
      </ol>
    </nav>
    <div class="row gutters-sm">
      <div class="col-md-4 mb-3">
        <div class="card">
          <div class="card-body">
            <div class="d-flex flex-column align-items-center text-center">
              <img src="https://ca.slack-edge.com/T02NE0241-U06DSV98AFN-4d5a28145a7e-512" alt="Admin" class="rounded-circle img-fluid img-thumbnail" width="150">
              <div class="mt-3">
                <h4><%= @tutor.fullname %></h4>
                <p class="font-size-sm p-3"><%= @tutor.address %></p>
                <button class="btn btn-rounded btn-outline-primary">Messages</button>
              </div>
            </div>
          </div>
        </div>
      </div>
      <div class="col-md-8">
        <div class="card mb-3">
          <div class="card-body">
            <div class="row">
              <div class="col-sm-3">
                <h6 class="mb-0">Full Name</h6>
              </div>
              <div class="col-sm-9 text-secondary">
                <%= @tutor.fullname %>
              </div>
            </div>
            <hr>
            <div class="row">
              <div class="col-sm-3">
                <h6 class="mb-0">Email</h6>
              </div>
              <div class="col-sm-9 text-secondary">
                <%= @tutor.user.email %>
              </div>
            </div>
            <hr>
            <div class="row">
              <div class="col-sm-3">
                <h6 class="mb-0">Address</h6>
              </div>
              <div class="col-sm-9 text-secondary">
                <%= @tutor.address %>
              </div>
            </div>
            <hr>
            <div class="row">
              <div class="col-sm-3">
                <h6 class="mb-0">Mobile</h6>
              </div>
              <div class="col-sm-9 text-secondary">
                (320) 380-4539
              </div>
            </div>
            <hr>
            <div class="row">

            </div>
          </div>
        </div>
      </div>
    </div>
    <link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css" rel="stylesheet">

    <h1 class="d-flex justify-content-center p-4">My Pets</h1>

    <div class="content">
      <div class="row justify-content-center">
        <% @tutor.pets.each do |pet| %>
          <div class="col-md-4">
              <div class="text-center card-box">
                <div class="member-card pt-2 pb-2 ">
                  <div class="thumb-lg member-thumb mx-auto"><img src="https://fotos.amomeupet.org/uploads/fotos/1608123513_5fda04796451e_hd.jpeg" class="rounded-circle img-thumbnail" alt="profile-image">
                  </div>
                  <div class="">
                    <h4><%= pet.name %></h4>
                    <p class="text-capitalize"><%= pet.species %> <span> </p>
                  </div>
                  <button type="button" class="btn btn-primary mt-3 btn-rounded waves-effect waves-light"><%= link_to "Pets Profile", pet_path(pet.id) %></button>
                </div>
              </div>
            </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
